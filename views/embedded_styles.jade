style.

  h1 {
    margin: 0;
    padding: 0;
    background-color: #cccccc;
    border-bottom: 1px solid dimgray;
    height: 70px;
    line-height: 70px;
    vertical-align: middle;
    text-align: center;
  }

  * {
    font-weight: 100;
  }

  .c {
    text-align: center;
  }

  .b {
    font-size: 125%;
  }

  textarea {
    height: 150px;
    border-radius: 5px;
    font-family: inherit;
    font-size: 12pt;
  }

  code {
    margin-top: 15px;
    padding: 1em 2% 1em 2%;
    display: inline-block;
    border: 1px solid black;
    border-radius: 5px;
  }

  footer {
    position: fixed;
    bottom: 0;
    border-top: 1px solid black;
    width: 94%;
    padding: 1%;
    margin: 0 2% 0 2%;
  }

  .label, .button {
    text-align: center;
    color: white;
    border-radius: 2px;
    font-size: 18pt;
    font-weight: 100;
    height: 50px;
    line-height: 50px;
  }

  .error {
    background: rgb(255, 123, 123);
  }

  .success {
    background: rgb(28, 184, 65)
  }

  .button {
    background: #0078e7;
    border-radius: 3px;
    border: 0;
  }

  .button.small {
    font-size: 14pt;
    height: 25px;
  }

  .share {
    display: inline-block;
    margin-left: .5em;
    padding: 4px 8px 0 0;
  }

  #fb-root {
    height: 24px;
  }

  .sharing {
    margin: 1em 0 1em 0;
    display: inline-block;
    border-top: 1px solid #C5C5C5;
    border-bottom: 1px solid #C5C5C5;
    padding-left: 1em;
    padding-right: 1em;
    text-align: center;
  }

  .line {
    width: 100%;
  }

  .line.p {
  }

  body, html {
    margin: 0;
    padding: 0;
    font-family: sans-serif;
  }

  * {
    box-sizing: border-box;
  }

  .ads {
    width: 100%;
    text-align: center;
    margin-top: 50px;
    padding: 1em;
  }

  input[name='name'] {
    height: 35px;
    border-radius: 5px;
    border: 1px solid black;
    margin-bottom: 35px;
    font-family: inherit;
    font-size: 12pt;
  }

  .bmk {
    padding-left: 5px;
  }

  @media screen and (min-width: 1024px) {
    form {
      padding: 1em;
    }
    .p {
      width: 100%;
    }
  }
